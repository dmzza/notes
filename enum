Table name: snacks
 id                         :integer
 ice_cream                  :string

class Snack < ActiveRecord::Base
  FLAVORS = Enum.new [
      [:vanilla, "Vanilla"],
      [:chocolate, "Chocolate"],
      [:rocky_road, "Rocky Road"]
      ])
  ]
end

<%= simple_form_for @snack do |f| %>
<%= f.collection_select :ice_cream, Snack::FLAVORS, :value, :label %>
<% end %>
